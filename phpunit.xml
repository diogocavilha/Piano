<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false">
     <filter>
        <whitelist processUncoveredFilesFromWhitelist="false">
            <directory suffix=".php">./src/Piano/</directory>
            <exclude>
                <directory suffix=".ini">./src/Piano/</directory>
            </exclude>
        </whitelist>
    </filter>
    <testsuites>
        <testsuite name="Piano Test Suite">
            <directory suffix=".php">./tests/</directory>
        </testsuite>
    </testsuites>
    <!-- <logging>
        <log type="coverage-html" target="./tests/coverageReport"/>
        <log type="coverage-clover" target="./tests/coverageReport/clover.xml"/>
    </logging> -->
</phpunit>
